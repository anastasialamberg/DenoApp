{
  "version": "1.0.0",
  "tasks": {
    "dev": "deno serve --watch --allow-net --allow-env --env-file --allow-sys src/app.ts",
    "test": "deno test --allow-read  --allow-ffi --allow-write --allow-run --allow-env --allow-net --allow-sys --env-file=.env.test src/",
    "db:push": "deno run --allow-net --node-modules-dir --allow-env --allow-read --allow-sys --allow-write --allow-run npm:drizzle-kit push",
    "db:push:test": "deno run --allow-net --node-modules-dir --allow-env --allow-read --allow-sys --allow-write --allow-run --env-file=.env.test npm:drizzle-kit push",
    "db:dev": "turso dev --db-file dev.db",
    "lint": "deno lint",
    "format": "deno fmt",
    "typecheck": "deno check **/*.ts"
  },
  "imports": {
    "@hono/zod-openapi": "npm:@hono/zod-openapi@^1.1.4",
    "@libsql/client": "npm:@libsql/client@^0.15.15",
    "@scalar/hono-api-reference": "npm:@scalar/hono-api-reference@^0.9.24",
    "@std/assert": "jsr:@std/assert@1",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "drizzle-kit": "npm:drizzle-kit@^0.31.7",
    "drizzle-orm": "npm:drizzle-orm@^0.44.7",
    "drizzle-zod": "npm:drizzle-zod@^0.8.3",
    "hono": "npm:hono@^4.10.6",
    "hono-pino": "npm:hono-pino@^0.10.3",
    "pino": "npm:pino@^10.1.0",
    "pino-pretty": "npm:pino-pretty@^13.1.2",
    "stoker": "npm:stoker@^2.0.1",
    "zod": "npm:zod@^4.1.12"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "types": [
      "node"
    ],
    "strict": true
  }
}
